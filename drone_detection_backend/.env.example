# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# YOLO Model
YOLO_MODEL_PATH=models/drone_yolov8.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# Video Processing
MAX_VIDEO_STREAMS=6
FRAME_SKIP=2

# Cross-screen Tracking
SCREEN_GAP_PIXELS=20
TRACKING_MEMORY_FRAMES=30
VELOCITY_PREDICTION_ENABLED=true

# Mistral AI (get key from https://console.mistral.ai/)
MISTRAL_API_KEY=your_api_key_here
MISTRAL_MODEL=mistral-small-latest

# RAG Storage
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Simulated Coordinates (San Francisco)
DEFAULT_LAT=37.7749
DEFAULT_LON=-122.4194
COORDINATE_VARIANCE=0.01
