# Server
HOST=0.0.0.0
PORT=8001
DEBUG=true

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:29092

# Redis
REDIS_URL=redis://localhost:6379

# OpenSearch
OPENSEARCH_HOSTS=["http://localhost:9200"]

# SeaweedFS
SEAWEEDFS_MASTER=http://localhost:9333
SEAWEEDFS_FILER=http://localhost:8888

# Tika
TIKA_SERVER=http://localhost:9998

# Ollama
OLLAMA_HOST=http://localhost:11434

# Agent Models (Ollama models)
ALERT_MODEL=phi3:mini
ANALYSIS_MODEL=mistral:7b
TASK_MODEL=codellama:7b
VISION_MODEL=llava:7b
DATA_MODEL=tinyllama:latest
EMBEDDING_MODEL=nomic-embed-text

# External APIs (optional)
OPENAI_API_KEY=
MISTRAL_API_KEY=

# Alert Settings
ALERT_ANOMALY_THRESHOLD=0.8
ALERT_CHECK_INTERVAL=60

# Task Execution
PLAYWRIGHT_HEADLESS=true
TASK_TIMEOUT=300

# Data Retention
LOG_RETENTION_DAYS=30
CACHE_MAX_SIZE=10000
